<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.movieplus.domain.db.read.RMovieTrailerMapper">
<resultMap id="ResultMap" type="java.util.LinkedHashMap">
	<id column="id" jdbcType="VARCHAR" javaType="java.lang.String" property="id" />
	<result column="movie_id" jdbcType="VARCHAR" javaType="java.lang.String" property="movieId" />
	<result column="trailer_url" jdbcType="VARCHAR" javaType="java.lang.String" property="trailerUrl" />
	<result column="trailer_title" jdbcType="VARCHAR" javaType="java.lang.String" property="trailerTitle" />
</resultMap>
<select id="selectWhere"
	parameterType="String"
	resultMap="ResultMap">
    SELECT
    	id,
    	movie_id,
    	trailer_url, 
    	trailer_title
    FROM 
    	movie_trailer
    WHERE
		${where}
</select>
</mapper>